<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>


<AnchorPane fx:id="context" prefHeight="333.0" prefWidth="658.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.developersstack.edumanagement.controller.RegistrationFormController">
   <children>
      <Label layoutX="8.0" layoutY="16.0" text="New Registration" textFill="#3e096b">
         <font>
            <Font name="Arial Rounded MT Bold" size="30.0" />
         </font>
      </Label>
      <Separator layoutX="14.0" layoutY="65.0" opacity="0.71" prefHeight="2.0" prefWidth="657.0" />
      <Button layoutX="534.0" layoutY="15.0" mnemonicParsing="false" onAction="#backToHomeOnAction" style="-fx-background-color: #0c2461;" text="Back to Home" textFill="#f2eded">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Button>
      <TextField fx:id="txtId" editable="false" layoutX="12.0" layoutY="83.0" prefHeight="37.0" prefWidth="185.0" promptText="Registration ID">
         <font>
            <Font name="Arial Bold" size="15.0" />
         </font>
      </TextField>
      <TextField fx:id="txtStudent" layoutX="208.0" layoutY="83.0" prefHeight="36.0" prefWidth="236.0" promptText="Student (Search here)">
         <font>
            <Font name="Arial Bold" size="15.0" />
         </font>
      </TextField>
      <Button fx:id="btn" layoutX="457.0" layoutY="272.0" mnemonicParsing="false" onAction="#registerOnAction" prefHeight="31.0" prefWidth="201.0" style="-fx-background-color: #0e7061;" text="Register" textFill="#f8f7f7">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Button>
      <ComboBox fx:id="cmbProgram" layoutX="453.0" layoutY="87.0" prefHeight="31.0" prefWidth="209.0" promptText="Program" />
      <Label layoutX="16.0" layoutY="155.0" text="New Registration" textFill="#3e096b">
         <font>
            <Font name="Arial Narrow Bold" size="22.0" />
         </font>
      </Label>
      <RadioButton fx:id="rbtnPaid" layoutX="16.0" layoutY="193.0" mnemonicParsing="false" selected="true" text="Paid">
         <font>
            <Font name="Arial Rounded MT Bold" size="16.0" />
         </font>
         <toggleGroup>
            <ToggleGroup fx:id="paidState" />
         </toggleGroup>
      </RadioButton>
      <RadioButton layoutX="100.0" layoutY="193.0" mnemonicParsing="false" text="Pending" toggleGroup="$paidState">
         <font>
            <Font name="Arial Rounded MT Bold" size="16.0" />
         </font>
      </RadioButton>
   </children>
</AnchorPane>
