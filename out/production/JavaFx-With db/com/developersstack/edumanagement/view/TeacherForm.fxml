<AnchorPane fx:id="context" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.developersstack.edumanagement.controller.TeacherFormController">
   <children>
      <Label layoutX="22.0" layoutY="24.0" text="Teacher Management" textFill="#3e096b">
         <font>
            <Font name="Arial Rounded MT Bold" size="30.0" />
         </font>
      </Label>
      <Separator layoutX="3.0" layoutY="71.0" opacity="0.71" prefHeight="3.0" prefWidth="1002.0" />
      <Button layoutX="864.0" layoutY="24.0" mnemonicParsing="false" onAction="#backToHomeOnAction" style="-fx-background-color: #0c2461;" text="Back to Home" textFill="#f2eded">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Button>
      <Button layoutX="717.0" layoutY="24.0" mnemonicParsing="false" onAction="#addNewTeacherOnAction" style="-fx-background-color: #0e7061;" text="+ New Teacher" textFill="#eff2f1">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Button>
      <TextField fx:id="txtId" editable="false" layoutX="24.0" layoutY="86.0" prefHeight="27.0" prefWidth="174.0" promptText="Teacher ID">
         <font>
            <Font name="Arial Bold" size="15.0" />
         </font>
      </TextField>
      <TextField fx:id="txtName" layoutX="202.0" layoutY="86.0" prefHeight="27.0" prefWidth="234.0" promptText="Full Name">
         <font>
            <Font name="Arial Bold" size="15.0" />
         </font>
      </TextField>
      <TextField fx:id="txtAddress" layoutX="680.0" layoutY="86.0" prefHeight="27.0" prefWidth="311.0" promptText="Address">
         <font>
            <Font name="Arial Bold" size="15.0" />
         </font>
      </TextField>
      <TextField fx:id="txtSearch" layoutX="24.0" layoutY="120.0" prefHeight="36.0" prefWidth="710.0" promptText="Search Here">
         <font>
            <Font name="Arial Bold" size="15.0" />
         </font>
      </TextField>
      <Button fx:id="btn" layoutX="792.0" layoutY="120.0" mnemonicParsing="false" onAction="#saveTeacherOnAction" prefHeight="31.0" prefWidth="201.0" style="-fx-background-color: #0e7061;" text="Save Teacher" textFill="#f8f7f7">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Button>
      <TableView fx:id="tblTeacher" layoutX="28.0" layoutY="174.0" prefHeight="387.0" prefWidth="963.0">
         <columns>
            <TableColumn fx:id="colId" prefWidth="123.0" text="#ID" />
            <TableColumn fx:id="colName" prefWidth="236.0" text="Full Name" />
            <TableColumn fx:id="colContact" prefWidth="142.0" text="Contact Number" />
            <TableColumn fx:id="colAddress" minWidth="0.0" prefWidth="339.0" text="Address" />
            <TableColumn fx:id="colOption" prefWidth="122.0" text="Options" />
         </columns>
      </TableView>
      <TextField fx:id="txtContact" layoutX="441.0" layoutY="86.0" prefHeight="27.0" prefWidth="234.0" promptText="Contact Number">
         <font>
            <Font name="Arial Bold" size="15.0" />
         </font>
      </TextField>
   </children>
</AnchorPane>
